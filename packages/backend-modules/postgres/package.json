{
  "name": "@repo/backend-modules-postgres",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "pnpm build --watch",
    "build": "tsc -b -v",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test:all": "jest --config jest.config.js --runInBand src/services",
    "test:domain": "jest --config jest.config.js --runInBand src/services/$npm_config_name.test",
    "test:file": "jest --config jest.config.js --runInBand $npm_config_name",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.config.integration.js",
    "test:integration:watch": "jest --config jest.config.integration.js --watch",
    "test:integration:coverage": "jest --config jest.config.integration.js --coverage"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "dependencies": {
    "@repo/back-share": "workspace:*",
    "@repo/dtos": "workspace:*",
    "@repo/enums": "workspace:*",
    "@repo/http-errors": "workspace:*",
    "@repo/postgres": "workspace:*",
    "dotenv": "^16.4.5",
    "pg": "^8.13.1",
    "typeorm": "^0.3.20",
    "typeorm-transactional": "^0.5.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/typeorm": "^11.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@nestjs/testing": "^11.1.3",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.3.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  }
}
